<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Survey Day -  @ViewBag.Title</title>
    <link href="~/content/reset.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/Chart.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-default navigation-top navbar-static-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("Admin", "Users")"><img src="~/content/img/logo.png" class="img-responsive" alt="Survey Day"></a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="@Url.Action("IndexAdmin", "Users")">
                                <span class="glyphicon glyphicon-user" aria-hidden="true"> </span>
                                Users
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("IndexAdmin", "Surveys")">
                                <span class="glyphicon glyphicon-th-list" aria-hidden="true"> </span>
                                Surveys
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("IndexAdmin", "UserAnswers")">
                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                Results
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "SendMailer")">
                                <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                                Contact patients
                            </a>
                        </li>
                        <li class="hidden"></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="@Url.Action("Logout", "Users")">
                                <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
                                Log Out @if (Session["LoggedUserNumber"] != null)
                                { <span>: @(Session["LoggedUserNumber"].ToString())</span> }
                            </a>
                        </li>
                        <li class="hidden"></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/scripts/script.js"></script>
</body>
</html>