@model LastSurvey.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="container">
    <div class="row" id="pwd-container">

        <div class="col-md-4"></div>

        <div class="col-md-4">
            <section class="login-form">

                @using (Html.BeginForm("Login", "Users", FormMethod.Post, new {@role="login"}))
                {
                    @Html.ValidationSummary(true, "Login failed. Check your login details.");

                    
                        <img src="~/content/img/logo.png" class="img-responsive" alt="Survey day logo" />
                        @Html.TextBoxFor(u => u.UserNumber, new { data_bind = "value: User number", @class = "form-control input-lg", @placeholder = "Username" })
                        @Html.ValidationMessageFor(u => u.UserNumber)
                        @Html.PasswordFor(u => u.Password, new { data_bind = "value: Password", @class = "form-control input-lg", @placeholder = "Password" })
                        @Html.ValidationMessageFor(u => u.Password)
                        <button type="submit" name="go" class="btn btn-lg btn-info btn-block btn-outline">Sign in</button>

                        <a href="#collapse1" class="nav-toggle">INFO</a>
                        <div id="collapse1" style="display:none">
                            <h4>Where to get the credentials</h4>
                            <p>You can receive username and password from your doctor</p>
                            <h4>Problems with the login</h4>
                            <p>If you face problems with the login contact the <a href="mailto:doctor@doctor.com">doctor</a></p>
                            
                        </div>

                    <!--/form-->

                }
            </section>
        </div>

        <div class="col-md-4"></div>

    </div>
</div>
